{
    "name": "middlewares/minifier",
    "type": "library",
    "description": "Middleware to minify Html, CSS and Javascript responses",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "minify",
        "html",
        "css",
        "js",
        "javascript"
    ],
    "homepage": "https://github.com/middlewares/minifier",
    "support": {
        "issues": "https://github.com/middlewares/minifier/issues"
    },
    "require": {
        "php": "^7.0",
        "mrclay/minify": "^3.0.1",
        "middlewares/utils": "~0.13",
        "http-interop/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit --coverage-text",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix .",
        "coverage": "phpunit --coverage-html=coverage"
    }
}
