{
    "name": "middlewares/minifier",
    "type": "library",
    "description": "Middleware to minify Html, CSS and Javascript responses",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "minify",
        "html",
        "css",
        "js",
        "javascript"
    ],
    "homepage": "https://github.com/middlewares/minifier",
    "support": {
        "issues": "https://github.com/middlewares/minifier/issues"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "middlewares/utils": "^2 || ^3 || ^4",
        "psr/http-server-middleware": "^1",
        "wyrihaximus/html-compress": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9",
        "friendsofphp/php-cs-fixer": "^3",
        "squizlabs/php_codesniffer": "^3",
        "oscarotero/php-cs-fixer-config": "^2",
        "phpstan/phpstan": "^1 || ^2",
        "laminas/laminas-diactoros": "^2 || ^3"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html=coverage"
    }
}