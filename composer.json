{
    "name": "middlewares/minifier",
    "type": "library",
    "description": "Middleware to minify Html, CSS and Javascript responses",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "minify",
        "html",
        "css",
        "js",
        "javascript"
    ],
    "homepage": "https://github.com/middlewares/minifier",
    "support": {
        "issues": "https://github.com/middlewares/minifier/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.4",
        "mrclay/minify": "^2.3",
        "middlewares/utils": "~0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix ."
    }
}
